<Window
    x:Class="vertical_tasks.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:vertical_tasks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="myButton" Click="myButton_Click">Click Me</Button>
        <ListView x:Name="myList" 
                  ItemsSource="{x:Bind Tasks}" 
                  Width="300"
                  ItemClick="OnItemClick"
                  SelectionChanged="OnSelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:TaskVM">
                    <Grid Margin="0,0,0,0" Padding="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse x:Name="Ellipse"
                            Grid.RowSpan="2"
                            Width ="16"
                            Height="16"
                            Margin="2,0,2,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Fill="{ThemeResource SystemControlBackgroundBaseMediumBrush}"/>
                        <TextBlock Grid.Column="1"
                            Text="{x:Bind Title}"
                            Style="{ThemeResource BaseTextBlockStyle}"
                                   TextTrimming="CharacterEllipsis"
                                   FontSize="12"
                            Margin="6,0,0,0"/>
                        <Button Grid.Column="2"
                                Width="20"
                                Margin="0,0,0,0"
                                Padding="0,0,0,0"
                                 
                            >
                            <Button.Content>
                                <FontIcon Glyph="&#xE00F;"/>
                            </Button.Content>
                            <Button.Flyout>
                                <MenuFlyout>
									<MenuFlyoutItem Text="Close window" Click="{x:Bind Close}">
										<MenuFlyoutItem.Icon>
											<FontIcon Glyph="&#xe711;"/>
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
									<MenuFlyoutItem Text="Minimize window" Click="{x:Bind Minimize}">
										<MenuFlyoutItem.Icon>
											<FontIcon Glyph="&#xe738;"/>
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </StackPanel>
</Window>
